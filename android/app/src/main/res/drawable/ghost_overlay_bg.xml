<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- Gradient background -->
    <gradient
        android:type="radial"
        android:gradientRadius="40dp"
        android:startColor="#88A020F0"
        android:centerColor="#44A020F0"
        android:endColor="#00A020F0" />
    
    <!-- Subtle border -->
    <stroke
        android:width="2dp"
        android:color="#55FFFFFF" />
        
    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
        
</shape>